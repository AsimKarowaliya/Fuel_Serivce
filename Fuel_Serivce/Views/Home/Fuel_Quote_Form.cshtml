<form class="needs-validation" novalidate>
    <div class="form-group">
        <label for="Gallons">Gallons Requested:</label>
        <input type="text" class="form-control" id="Gallons" placeholder="Gallons" required>
        <div class="invalid-feedback">
            Please provide a input.
        </div>

    </div>

    <div class="form-group">
        <label for="Address">Delivery Address:</label>
        <input type="email" class="form-control" id="Address" readonly>
    </div>
    <div class="form-group">
        <label for="DeliveryDate">Delivery Date:</label>
        <input type="date" class="form-control" id="DeliveryDate" name="date" placeholder="MM/DD/YYYY" required/>
    </div>
    <div class="form-group">
        <label for="SuggestedPrice">Suggested Price:</label>
        <input type="password" class="form-control" id="SuggestedPrice" readonly>
    </div>
    <div class="form-group">
        <label for="TotalDue">Total Ammount Due:</label>
        <input type="password" class="form-control" id="TotalDue" readonly>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>