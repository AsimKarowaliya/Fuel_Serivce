@model Fuel_Service.Models.FuelQuote_Model
@{
    ViewData["Title"] = "Fuel Quote";
}


<form asp-controller="home" method="post" class="needs-validation" novalidate>
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label for="Gallons">Gallons Requested:</label>
        <input asp-for="Gallons" type="text" class="form-control" id="Gallons" placeholder="Gallons" required>
        <div class="invalid-feedback">
            Please provide a input.
        </div>

    </div>

    <div class="form-group">
        <label for="Address">Delivery Address:</label>
        <input asp-for="Address" type="email" class="form-control" id="Address" readonly>
    </div>
    <div class="form-group">
        <label for="DeliveryDate">Delivery Date:</label>
        <input asp-for="viewDate" type="date" class="form-control" id="DeliveryDate" name="date" placeholder="MM/DD/YYYY" required />
    </div>
    <div class="form-group">
        <label for="SuggestedPrice">Suggested Price:</label>
        <input asp-for="SuggestPrice" type="text" class="form-control" name="sprice" id="SuggestedPrice" readonly>
    </div>
    <div class="form-group">
        <label for="TotalDue">Total Amount Due:</label>
        <input asp-for="TotalPrice" type="text" class="form-control" name="tprice" id="TotalDue" readonly>
    </div>
    <button asp-action="CheckOut" type="submit" class="btn btn-primary">Check Out</button>
    <button asp-action="GetPrice" type="submit" class="btn btn-primary">Get Price</button>
</form>


<h2 style="font-style:italic; color:deeppink">@ViewBag.Result</h2>