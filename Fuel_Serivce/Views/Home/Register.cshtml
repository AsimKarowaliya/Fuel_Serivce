@{
    ViewData["Title"] = "Register";
}
@{
    Layout = "~/Views/Shared/Register_Layout.cshtml";
}
<form asp-controller="Home" asp-action="GetUserInfo" method="post" class="needs-validation" novalidate>
    
    <div class="form-group" >
        <div class="col-xl-2">
            User Name: <input type="text" class="form-control" name="UserName" required minlength="2" maxlength="50">
            <div class="invalid-feedback">Please provide input.</div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-xl-2">
            Password: <input type="password" class="form-control" name="Password" required minlength="4" maxlength="10">
            <div class="invalid-feedback">Please provide input.</div>
        </div>
       
    </div>

    <div class="form-group">
        <div class="col-xl-2">
            Retype Password: <input type="password" class="form-control" name="retype_password" required minlength="4" maxlength="10">
            <div class="invalid-feedback">Please provide input.</div>
        </div>
        
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>
<br /><br />

<h2 style="font-style:italic; color:deeppink">@ViewBag.Result</h2>